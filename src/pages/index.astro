    <script is:inline>
      (function () {
        const form = document.getElementById("amicbridge-form");
        const toast = document.getElementById("toast");

        function showToast(message, type) {
          toast.textContent = message;
          toast.classList.toggle("error", type === "error");
          toast.style.display = "block";
        }

        // Optional: AJAX submit for a smoother UX (still uses Formspree)
        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          const fd = new FormData(form);

          // Basic sanity checks (HTML required already handles most)
          const currency = fd.get("currency");
          const amount = Number(fd.get("amount"));
          if (!currency) return showToast("Please choose a currency.", "error");
          if (!Number.isFinite(amount) || amount <= 0) return showToast("Please enter a valid amount.", "error");

          try {
            const res = await fetch(form.action, {
              method: "POST",
              headers: { "Accept": "application/json" },
              body: fd,
            });

            if (res.ok) {
              form.reset();
              showToast("Request submitted. We’ll review it and get back to you.", "success");
            } else {
              showToast("Submission failed. Please try again or refresh the page.", "error");
            }
          } catch (err) {
            showToast("Network error. Please try again.", "error");
          }
        });
      })();
    </script>
