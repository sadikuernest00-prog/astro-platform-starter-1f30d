---
const SITE = {
  name: "Amicbridge",
  domain: "amicbridge.com",
  supportEmail: "support@amicbridge.com",
  formspree: "https://formspree.io/f/xzznjkvd",
};

const borrowerBenefits = [
  "Request funding from individuals — not only banks.",
  "Explain your purpose and timeline clearly.",
  "Negotiate terms directly, with transparency.",
  "Keep control: accept, decline, or counter-offer.",
];

const investorBenefits = [
  "Support real people and use-cases, not anonymous numbers.",
  "Define your own risk appetite, return target, and limits.",
  "Select deal size, duration, and preferred categories.",
  "Decide case-by-case — no obligation to proceed.",
];

const trustPoints = [
  {
    title: "Connection platform only",
    body: "Amicbridge connects borrowers and lenders. We do not lend money, hold funds, or guarantee repayment.",
  },
  {
    title: "Transparency over hype",
    body: "Clear requests, clear terms, and direct communication. We avoid “black box” decisions.",
  },
  {
    title: "Privacy by design",
    body: "Share only what’s necessary during early access. More verification tools are planned as we scale.",
  },
];

const faqs = [
  {
    q: "Does Amicbridge provide loans or handle payments?",
    a: "No. Amicbridge is a connection platform. We do not provide loans, hold money, process payments, or guarantee repayments.",
  },
  {
    q: "How do borrowers and lenders agree terms?",
    a: "Borrowers and lenders decide terms directly (amount, duration, APR, conditions). During early access, we may help facilitate introductions manually.",
  },
  {
    q: "Is lending risky?",
    a: "Yes. Lending can result in partial or total loss. Lenders should perform due diligence and only lend what they can afford to lose.",
  },
  {
    q: "When will full matching and messaging be available?",
    a: "We’re rolling out features in stages. Join early access and we’ll notify you as capabilities expand in your region.",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{SITE.name} — Borrowing & lending, made simple</title>
    <meta
      name="description"
      content="Amicbridge is a people-first borrowing and lending connection platform. Submit a borrowing request or investment request in minutes."
    />
    <meta name="robots" content="index,follow" />

    <!-- Open Graph (nice previews) -->
    <meta property="og:title" content={`${SITE.name} — Borrowing & lending, made simple`} />
    <meta
      property="og:description"
      content="Submit a borrowing request or investment request in minutes. Transparent terms. Direct connection."
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SITE.name} />

    <!-- Tiny favicon fallback -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><rect width=%22100%22 height=%22100%22 rx=%2222%22 fill=%22%232563eb%22/><text x=%2250%22 y=%2262%22 font-size=%2256%22 text-anchor=%22middle%22 fill=%22white%22 font-family=%22Arial%22>A</text></svg>" />
  </head>

  <body>
    <!-- Top Navigation -->
    <header class="topbar">
      <div class="container topbar-inner">
        <a class="brand" href="#top" aria-label={`${SITE.name} home`}>
          <span class="mark" aria-hidden="true">A</span>
          <span class="brand-text">
            <span class="brand-name">{SITE.name}</span>
            <span class="brand-domain">{SITE.domain}</span>
          </span>
        </a>

        <nav class="nav" aria-label="Primary navigation">
          <a href="#how">How it works</a>
          <a href="#trust">Trust</a>
          <a href="#requests">Requests</a>
          <a class="nav-cta" href="#requests">Get started</a>
        </nav>
      </div>
    </header>

    <main id="top">
      <!-- HERO -->
      <section class="hero">
        <div class="container hero-grid">
          <div class="hero-copy">
            <div class="hero-kicker">
              <span class="pill">Early Access</span>
              <span class="kicker-text">Borrowing & investment requests are open</span>
            </div>

            <h1>
              A trusted bridge between <span>borrowers</span> and <span>lenders</span>.
            </h1>

            <p class="lead">
              {SITE.name} is a connection platform where borrowers and lenders can share requests, review terms, and
              decide directly — with clarity and control.
            </p>

            <div class="cta-row">
              <a class="btn btn-primary" href="#borrow">Send borrowing request</a>
              <a class="btn btn-outline" href="#invest">Send investment request</a>
            </div>

            <div class="signal-row" aria-label="Key trust signals">
              <div class="signal">
                <span class="signal-icon" aria-hidden="true">✓</span>
                <div>
                  <strong>Transparent terms</strong>
                  <span>No hidden approvals or unclear fees.</span>
                </div>
              </div>
              <div class="signal">
                <span class="signal-icon" aria-hidden="true">✓</span>
                <div>
                  <strong>Connection only</strong>
                  <span>We don’t custody funds or guarantee repayment.</span>
                </div>
              </div>
              <div class="signal">
                <span class="signal-icon" aria-hidden="true">✓</span>
                <div>
                  <strong>Built for trust</strong>
                  <span>Privacy-first submissions and clear disclosures.</span>
                </div>
              </div>
            </div>

            <div class="notice" role="note">
              <strong>Important:</strong> {SITE.name} is a connection platform. We do not provide loans, hold money, or
              guarantee repayments. Lending involves risk — do your own checks and consult professionals if needed.
            </div>
          </div>

          <!-- Right side: premium preview card -->
          <aside class="hero-aside" aria-label="Example request preview">
            <div class="preview">
              <div class="preview-head">
                <div class="preview-title">
                  <span class="live-dot" aria-hidden="true"></span>
                  Example match preview
                </div>
                <span class="preview-badge">Terms you control</span>
              </div>

              <div class="preview-section">
                <div class="label">Borrow request</div>
                <div class="grid2">
                  <div class="field">
                    <span>Amount</span>
                    <strong>€2,000</strong>
                  </div>
                  <div class="field">
                    <span>Duration</span>
                    <strong>6 months</strong>
                  </div>
                </div>
                <div class="field full">
                  <span>Max APR</span>
                  <strong>5%</strong>
                </div>
              </div>

              <div class="divider" aria-hidden="true"></div>

              <div class="preview-section">
                <div class="label">Investor offer</div>
                <div class="field full">
                  <span>Offer</span>
                  <strong>€2,000 · 4.5% APR</strong>
                </div>
                <div class="grid2">
                  <div class="field">
                    <span>Type</span>
                    <strong>Personal</strong>
                  </div>
                  <div class="field">
                    <span>Risk</span>
                    <strong>Medium</strong>
                  </div>
                </div>
              </div>

              <div class="divider soft" aria-hidden="true"></div>

              <div class="mini-metrics">
                <div class="metric">
                  <span>Clarity</span>
                  <strong>High</strong>
                </div>
                <div class="metric">
                  <span>Negotiation</span>
                  <strong>Direct</strong>
                </div>
                <div class="metric">
                  <span>Decision</span>
                  <strong>Yours</strong>
                </div>
              </div>

              <p class="tiny">
                Example only. Real onboarding and verification tools are evolving during early access.
              </p>
            </div>
          </aside>
        </div>
      </section>

      <!-- HOW IT WORKS -->
      <section class="section" id="how">
        <div class="container">
          <div class="section-head">
            <h2>How it works</h2>
            <p>
              A simple process designed for clarity. You share a request, review terms, and decide directly.
            </p>
          </div>

          <div class="steps">
            <div class="step">
              <div class="step-num">1</div>
              <div>
                <strong>Submit a request</strong>
                <p>Borrowers share needs. Investors share strategy, limits, and preferences.</p>
              </div>
            </div>
            <div class="step">
              <div class="step-num">2</div>
              <div>
                <strong>Review & connect</strong>
                <p>We help surface relevant matches (manual introductions during early access).</p>
              </div>
            </div>
            <div class="step">
              <div class="step-num">3</div>
              <div>
                <strong>Agree terms directly</strong>
                <p>Discuss, negotiate, and decide. Proceed only if everything makes sense.</p>
              </div>
            </div>
          </div>

          <div class="split">
            <div class="panel">
              <h3>For borrowers</h3>
              <ul>
                {borrowerBenefits.map((b) => <li>{b}</li>)}
              </ul>
            </div>
            <div class="panel">
              <h3>For investors / lenders</h3>
              <ul>
                {investorBenefits.map((b) => <li>{b}</li>)}
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- TRUST -->
      <section class="section alt" id="trust">
        <div class="container">
          <div class="section-head">
            <h2>Trust & safety</h2>
            <p>
              Trust is not a marketing word — it’s a system. Here’s what we do (and what we don’t do).
            </p>
          </div>

          <div class="trust-grid">
            {trustPoints.map((t) => (
              <div class="trust-card">
                <h3>{t.title}</h3>
                <p>{t.body}</p>
              </div>
            ))}
          </div>

          <div class="disclosure" role="note">
            <p>
              <strong>Risk disclosure:</strong> Lending can involve partial or total loss. Always verify identities,
              review documentation, and consider professional advice before lending or borrowing.
            </p>
          </div>
        </div>
      </section>

      <!-- REQUESTS / FORMS -->
      <section class="section" id="requests">
        <div class="container">
          <div class="section-head">
            <h2>Send a request</h2>
            <p>
              Choose the form you need. Requests are delivered securely via Formspree and reviewed during early access.
            </p>
          </div>

          <div class="forms-grid">
            <!-- Borrow -->
            <article class="form-card" id="borrow">
              <div class="form-head">
                <h3>Borrowing request</h3>
                <p class="muted">Share your amount, timeline, and situation. Be clear — it helps matching.</p>
              </div>

              <form action={SITE.formspree} method="POST">
                <input type="hidden" name="requestType" value="Borrowing request" />
                <input type="hidden" name="source" value={SITE.domain} />

                <div class="grid2">
                  <label>
                    Full name
                    <input name="name" type="text" placeholder="Your name" required />
                  </label>
                  <label>
                    Email
                    <input name="email" type="email" placeholder="you@email.com" required />
                  </label>
                </div>

                <div class="grid3">
                  <label>
                    Amount (EUR)
                    <input name="amountEur" type="number" min="0" step="50" placeholder="2000" required />
                  </label>
                  <label>
                    Duration (months)
                    <input name="durationMonths" type="number" min="1" step="1" placeholder="6" required />
                  </label>
                  <label>
                    Max APR (%)
                    <input name="maxApr" type="number" min="0" step="0.1" placeholder="5" />
                  </label>
                </div>

                <label>
                  Purpose / details
                  <textarea
                    name="message"
                    rows="6"
                    placeholder="Explain what the loan is for, your plan to repay, and any relevant context."
                    required></textarea>
                </label>

                <label class="checkbox">
                  <input type="checkbox" name="disclaimerAccepted" required />
                  <span>I understand Amicbridge is a connection platform and does not guarantee outcomes.</span>
                </label>

                <button class="btn btn-primary btn-full" type="submit">Submit borrowing request</button>
                <p class="tiny">
                  By submitting, you agree to be contacted about your request.
                </p>
              </form>
            </article>

            <!-- Invest -->
            <article class="form-card" id="invest">
              <div class="form-head">
                <h3>Investment request</h3>
                <p class="muted">Describe your strategy, conditions, and what types of borrowers you prefer.</p>
              </div>

              <form action={SITE.formspree} method="POST">
                <input type="hidden" name="requestType" value="Investment request" />
                <input type="hidden" name="source" value={SITE.domain} />

                <div class="grid2">
                  <label>
                    Full name
                    <input name="name" type="text" placeholder="Your name" required />
                  </label>
                  <label>
                    Email
                    <input name="email" type="email" placeholder="you@email.com" required />
                  </label>
                </div>

                <div class="grid3">
                  <label>
                    Budget (EUR)
                    <input name="budgetEur" type="number" min="0" step="50" placeholder="5000" required />
                  </label>
                  <label>
                    Target APR (%)
                    <input name="targetApr" type="number" min="0" step="0.1" placeholder="6" />
                  </label>
                  <label>
                    Preferred duration (months)
                    <input name="preferredDurationMonths" type="number" min="1" step="1" placeholder="6–24" />
                  </label>
                </div>

                <label>
                  Strategy / conditions
                  <textarea
                    name="strategy"
                    rows="6"
                    placeholder="Example: personal loans only, max 12 months, prefer stable income, require verification, max per-borrower €500, etc."
                    required></textarea>
                </label>

                <label>
                  Notes (optional)
                  <textarea name="notes" rows="3" placeholder="Anything else that matters to you."></textarea>
                </label>

                <label class="checkbox">
                  <input type="checkbox" name="riskAcknowledged" required />
                  <span>I understand lending involves risk and Amicbridge does not guarantee repayment.</span>
                </label>

                <button class="btn btn-primary btn-full" type="submit">Submit investment request</button>
                <p class="tiny">
                  By submitting, you agree to be contacted about your request.
                </p>
              </form>
            </article>
          </div>
        </div>
      </section>

      <!-- FAQ -->
      <section class="section alt" id="faq">
        <div class="container">
          <div class="section-head">
            <h2>FAQ</h2>
            <p>Short answers, clear expectations.</p>
          </div>

          <div class="faq">
            {faqs.map((item) => (
              <details class="faq-item">
                <summary>{item.q}</summary>
                <p>{item.a}</p>
              </details>
            ))}
          </div>
        </div>
      </section>

      <!-- Footer -->
      <footer class="footer" id="safety">
        <div class="container footer-inner">
          <div class="footer-left">
            <div class="footer-brand">
              <span class="mark small" aria-hidden="true">A</span>
              <div>
                <strong>{SITE.name}</strong>
                <div class="footer-muted">{SITE.domain}</div>
              </div>
            </div>
            <p class="footer-muted" style="margin-top:.75rem;">
              Connection platform only. We don’t provide loans, custody funds, or guarantee repayments.
            </p>
          </div>

          <div class="footer-links" aria-label="Footer links">
            <a href="#how">How it works</a>
            <a href="#trust">Trust</a>
            <a href="#requests">Requests</a>
          </div>
        </div>

        <div class="container footer-bottom">
          <p class="tiny">© {new Date().getFullYear()} {SITE.name}. All rights reserved.</p>
        </div>
      </footer>
    </main>

    <!-- Styles: clean white fintech look -->
    <style>
      :root{
        --bg:#ffffff;
        --text:#0b1220;
        --muted:#475569;
        --muted2:#64748b;
        --border:#e2e8f0;
        --soft:#f8fafc;
        --soft2:#f1f5f9;
        --accent:#1d4ed8;
        --accent2:#1e40af;
        --good:#16a34a;
        --shadow: 0 18px 60px rgba(2, 6, 23, 0.08);
        --r: 18px;
      }

      *{box-sizing:border-box}
      html,body{margin:0;padding:0}
      body{
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
        color: var(--text);
        background: var(--bg);
        line-height: 1.5;
      }

      a{color:inherit}
      .container{width:min(1120px,calc(100% - 2rem));margin:0 auto}

      /* Topbar */
      .topbar{
        position: sticky;
        top: 0;
        z-index: 50;
        background: rgba(255,255,255,.86);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--border);
      }
      .topbar-inner{
        display:flex;align-items:center;justify-content:space-between;
        padding:.95rem 0;
        gap: 1rem;
      }
      .brand{
        display:flex;align-items:center;gap:.7rem;
        text-decoration:none;
      }
      .mark{
        width:38px;height:38px;border-radius:14px;
        display:grid;place-items:center;
        background: linear-gradient(135deg, var(--accent), var(--good));
        color:#fff;font-weight:900;
        box-shadow: 0 14px 30px rgba(29,78,216,.18);
        letter-spacing:.02em;
      }
      .mark.small{width:32px;height:32px;border-radius:12px}
      .brand-text{display:flex;flex-direction:column;line-height:1.05}
      .brand-name{font-weight:900;letter-spacing:-.01em}
      .brand-domain{font-size:.86rem;color:var(--muted2)}
      .nav{display:flex;align-items:center;gap:1rem}
      .nav a{
        text-decoration:none;
        font-weight:750;
        color: var(--muted);
        padding:.35rem .5rem;
        border-radius: 12px;
      }
      .nav a:hover{background: var(--soft2); color: var(--text)}
      .nav-cta{
        border: 1px solid var(--border);
        background: var(--soft);
        color: var(--text) !important;
      }

      /* Hero */
      .hero{
        padding: 3.4rem 0 2.2rem;
        background:
          radial-gradient(900px 500px at 20% 0%, rgba(29,78,216,.10), transparent 60%),
          radial-gradient(800px 500px at 80% 10%, rgba(22,163,74,.08), transparent 60%),
          #fff;
      }
      .hero-grid{
        display:grid;
        grid-template-columns: 1.15fr .85fr;
        gap: 2rem;
        align-items: start;
      }
      .hero-kicker{display:flex;align-items:center;gap:.65rem;flex-wrap:wrap}
      .pill{
        display:inline-flex;
        padding:.28rem .6rem;
        border-radius:999px;
        border:1px solid var(--border);
        background: var(--soft);
        font-weight:850;
        font-size:.85rem;
      }
      .kicker-text{color:var(--muted);font-weight:650}
      h1{
        margin: 1rem 0 0;
        font-size: clamp(2.25rem, 4vw, 3.25rem);
        line-height: 1.07;
        letter-spacing: -0.03em;
      }
      h1 span{
        background: linear-gradient(90deg, var(--accent), var(--good));
        -webkit-background-clip:text;
        background-clip:text;
        color: transparent;
      }
      .lead{
        margin: 1rem 0 1.25rem;
        color: var(--muted);
        font-size: 1.06rem;
        max-width: 68ch;
      }
      .cta-row{display:flex;gap:.8rem;flex-wrap:wrap;margin:.6rem 0 1.1rem}
      .btn{
        display:inline-flex;align-items:center;justify-content:center;
        padding: .85rem 1.06rem;
        border-radius: 999px;
        border:1px solid var(--border);
        background: var(--soft);
        text-decoration:none;
        font-weight: 900;
        letter-spacing: -.01em;
        cursor:pointer;
      }
      .btn-primary{
        background: var(--accent);
        border-color: var(--accent);
        color: #fff;
        box-shadow: 0 18px 40px rgba(29,78,216,.18);
      }
      .btn-primary:hover{background: var(--accent2); border-color: var(--accent2)}
      .btn-outline{background:#fff}
      .btn-full{width:100%}

      .signal-row{
        display:grid;
        grid-template-columns: 1fr;
        gap: .7rem;
        margin: 1rem 0 1.1rem;
      }
      .signal{
        display:flex;gap:.75rem;align-items:flex-start;
        border: 1px solid var(--border);
        background: #fff;
        border-radius: var(--r);
        padding: .85rem .95rem;
      }
      .signal-icon{
        width:28px;height:28px;border-radius:10px;
        display:grid;place-items:center;
        background: rgba(22,163,74,.12);
        border: 1px solid rgba(22,163,74,.25);
        color: var(--good);
        font-weight: 900;
        flex: 0 0 auto;
      }
      .signal strong{display:block}
      .signal span{display:block;color:var(--muted);margin-top:.12rem}

      .notice{
        border: 1px solid rgba(29,78,216,.18);
        background: rgba(29,78,216,.06);
        color: #0b1220;
        padding: .95rem 1rem;
        border-radius: var(--r);
        font-size: .95rem;
      }

      /* Preview */
      .preview{
        border: 1px solid var(--border);
        border-radius: var(--r);
        background: #fff;
        padding: 1.1rem;
        box-shadow: var(--shadow);
      }
      .preview-head{
        display:flex;align-items:center;justify-content:space-between;
        gap:.7rem;flex-wrap:wrap;
        margin-bottom: .85rem;
      }
      .preview-title{display:flex;align-items:center;gap:.55rem;font-weight:900;color:var(--muted)}
      .live-dot{
        width:10px;height:10px;border-radius:999px;background: var(--good);
        box-shadow:0 0 0 6px rgba(22,163,74,.12);
      }
      .preview-badge{
        border:1px solid var(--border);
        background: var(--soft);
        padding:.28rem .55rem;
        border-radius:999px;
        color:var(--muted);
        font-size:.86rem;
        font-weight:750;
      }
      .label{
        font-size:.78rem;
        text-transform: uppercase;
        letter-spacing: .14em;
        color: var(--muted2);
        margin: .9rem 0 .35rem;
      }
      .grid2{display:grid;grid-template-columns:1fr 1fr;gap:.65rem}
      .field{
        border:1px solid var(--border);
        background: var(--soft);
        border-radius: 14px;
        padding: .72rem .8rem;
        display:flex;align-items:center;justify-content:space-between;gap:.9rem;
      }
      .field span{color:var(--muted);font-weight:700;font-size:.92rem}
      .field strong{font-weight:950}
      .field.full{margin-top:.65rem}
      .divider{height:1px;background: var(--border); margin: 1rem 0}
      .divider.soft{background: rgba(226,232,240,.7)}
      .mini-metrics{display:grid;grid-template-columns:repeat(3,1fr);gap:.65rem}
      .metric{
        border:1px solid var(--border);
        border-radius: 14px;
        padding: .7rem .8rem;
        background: #fff;
      }
      .metric span{display:block;color:var(--muted2);font-size:.88rem}
      .metric strong{display:block;margin-top:.15rem;font-weight:950}
      .tiny{margin:.85rem 0 0;color:var(--muted2);font-size:.9rem}

      /* Sections */
      .section{padding: 3rem 0}
      .section.alt{background: var(--soft)}
      .section-head{max-width: 78ch; margin-bottom: 1.25rem}
      .section-head h2{margin:0;font-size:1.8rem;letter-spacing:-.02em}
      .section-head p{margin:.55rem 0 0;color:var(--muted)}

      .steps{display:grid;grid-template-columns:repeat(3,1fr);gap:1rem}
      .step{
        border:1px solid var(--border);
        background:#fff;
        border-radius: var(--r);
        padding: 1.05rem 1.1rem;
        display:flex;gap:.85rem;
      }
      .step-num{
        width:34px;height:34px;border-radius:12px;
        display:grid;place-items:center;
        background: rgba(29,78,216,.10);
        border: 1px solid rgba(29,78,216,.22);
        color: var(--accent);
        font-weight: 950;
        flex: 0 0 auto;
      }
      .step p{margin:.35rem 0 0;color:var(--muted)}

      .split{display:grid;grid-template-columns:1fr 1fr;gap:1rem;margin-top:1.2rem}
      .panel{
        border:1px solid var(--border);
        background:#fff;
        border-radius: var(--r);
        padding: 1.1rem 1.2rem;
      }
      .panel h3{margin:0 0 .65rem}
      .panel ul{margin:0;padding-left:1.2rem;color:var(--muted)}
      .panel li{margin:.5rem 0}

      /* Trust */
      .trust-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:1rem}
      .trust-card{
        border:1px solid var(--border);
        background:#fff;
        border-radius: var(--r);
        padding: 1.1rem 1.2rem;
      }
      .trust-card h3{margin:0 0 .35rem}
      .trust-card p{margin:0;color:var(--muted)}
      .disclosure{
        margin-top: 1.1rem;
        border: 1px solid rgba(15, 23, 42, .10);
        background: rgba(15, 23, 42, .04);
        border-radius: var(--r);
        padding: 1rem 1.1rem;
        color: var(--muted);
      }
      .disclosure p{margin:0}

      /* Forms */
      .forms-grid{display:grid;grid-template-columns:1fr 1fr;gap:1rem;align-items:start}
      .form-card{
        border: 1px solid var(--border);
        background:#fff;
        border-radius: var(--r);
        padding: 1.2rem;
        box-shadow: 0 12px 36px rgba(2,6,23,.06);
      }
      .form-head h3{margin:0 0 .35rem}
      .muted{color:var(--muted);margin:0}
      form{margin-top:.95rem}
      label{display:block;font-weight:850;margin:.8rem 0 .28rem}
      input, textarea{
        width:100%;
        padding: .8rem .88rem;
        border-radius: 14px;
        border:1px solid var(--border);
        background:#fff;
        font:inherit;
        color:var(--text);
        outline:none;
      }
      textarea{resize:vertical}
      input:focus, textarea:focus{
        border-color: rgba(29,78,216,.45);
        box-shadow: 0 0 0 4px rgba(29,78,216,.12);
      }
      .grid3{display:grid;grid-template-columns:repeat(3,1fr);gap:.8rem}
      .checkbox{
        display:flex;gap:.6rem;align-items:flex-start;
        margin-top:.85rem;
        color: var(--muted);
        font-weight:700;
      }
      .checkbox input{width:auto;margin-top:.2rem}

      /* FAQ */
      .faq{display:grid;gap:.7rem}
      .faq-item{
        border:1px solid var(--border);
        background:#fff;
        border-radius: var(--r);
        padding: .95rem 1.05rem;
      }
      .faq-item summary{
        cursor:pointer;
        font-weight: 900;
        color: var(--text);
      }
      .faq-item p{margin:.6rem 0 0;color:var(--muted)}

      /* Footer */
      .footer{border-top:1px solid var(--border); padding: 2.4rem 0 1.6rem; background:#fff}
      .footer-inner{display:flex;justify-content:space-between;gap:1rem;flex-wrap:wrap}
      .footer-brand{display:flex;align-items:center;gap:.65rem}
      .footer-muted{color:var(--muted2);font-size:.92rem}
      .footer-links{display:flex;gap:1rem;flex-wrap:wrap}
      .footer-links a{
        color: var(--muted);
        font-weight:800;
        text-decoration:none;
        padding:.2rem .2rem;
        border-radius:10px;
      }
      .footer-links a:hover{text-decoration:underline}
      .footer-bottom{margin-top:1.15rem;padding-top:1rem;border-top:1px solid var(--border)}

      /* Responsive */
      @media (max-width: 980px){
        .hero-grid{grid-template-columns:1fr}
        .steps{grid-template-columns:1fr}
        .split{grid-template-columns:1fr}
        .trust-grid{grid-template-columns:1fr}
        .forms-grid{grid-template-columns:1fr}
        .grid3{grid-template-columns:1fr}
        .nav{display:none}
      }
    </style>
  </body>
</html>
